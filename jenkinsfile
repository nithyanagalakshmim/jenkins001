pipeline {
    agent any
    stages {
        stage('Install Dependencies') {
            steps {
                bat '"C:\\Windows\\System32\\cmd.exe" /c npm install -D @playwright/test'
                bat '"C:\\Windows\\System32\\cmd.exe" /c npx playwright install'
            }
        }
        stage('Help') {
            steps {
                bat '"C:\\Windows\\System32\\cmd.exe" /c npx playwright test --help'
            }
        }
        stage('Run Tests') {
            steps {
                bat '"C:\\Windows\\System32\\cmd.exe" /c npx playwright test --list'
                bat '"C:\\Windows\\System32\\cmd.exe" /c npx playwright test'
            }
        }
    }
}
