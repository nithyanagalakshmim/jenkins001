pipeline {
    agent any
    stages {
        stage('Install Dependencies') {
            steps {
                bat 'cmd.exe /c npm install -D @playwright/test'
                bat 'cmd.exe /c npx playwright install'
            }
        }
        stage('Help') {
            steps {
                bat 'cmd.exe /c npx playwright test --help'
            }
        }
        stage('Run Tests') {
            steps {
                bat 'cmd.exe /c npx playwright test --list'
                bat 'cmd.exe /c npx playwright test'
            }
        }
    }
}
