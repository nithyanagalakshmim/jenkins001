pipeline {
    agent any
    stages {
        stage('Install Dependencies') {
            steps {
                bat 'npm install -D @playwright/test'
                bat 'npx playwright install'
            }
        }
        stage('Run Login Test') {
            steps {
                // Run only login.spec.js with 1 worker on Chrome
                bat 'npx playwright test tests/login.spec.js --workers=1 --project=chromium'
            }
        }
    }
}
